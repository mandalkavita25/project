{
  "name": "specbee",
  "version": "1.0.0",
  "description": "Specbee redesign theme.",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "watch:css": "sass --no-source-map --watch src/scss:dist/css",
    "compile:css": "sass --no-source-map src/scss:dist/css --style expanded",
    "postcss": "NODE_ENV=production postcss dist/css/**/*.css -r --no-map",
    "postcss:dev": "postcss dist/css/**/*.css -r --no-map",
    "lint:css": "stylelint src/scss",
    "scss:fix": "stylelint \"**/*.scss\" --fix",
    "build:css-dev": "npm-run-all -s lint:css compile:css postcss:dev",
    "build:css": "npm-run-all -s lint:css compile:css postcss",
    "watch:js": "babel src/js -d dist/js  --watch",
    "build:js-dev": "babel src/js -d dist/js --no-comments",
    "build:js": "BABEL_ENV=minify babel src/js -d dist/js --no-comments",
    "lint:js": "eslint src/js",
    "build": "npm-run-all clean build:css build:js",
    "build:dev": "npm-run-all clean build:css-dev build:js-dev",
    "watch": "npm-run-all -p watch:css postcss:dev watch:js",
    "lint": "npm-run-all -p lint:**"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:team_specbee/specbee-redesign.git"
  },
  "browserslist": [
    "last 5 versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@popperjs/core": "^2.11.6",
    "@splidejs/splide": "^4.1.4",
    "@splidejs/splide-extension-auto-scroll": "^0.5.3",
    "autoprefixer": "^10.4.12",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.2",
    "bootstrap": "^5.2.2",
    "cssnano": "^6.0.1",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jquery": "^1.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-yml": "^1.2.0",
    "gsap": "^3.11.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.17",
    "postcss-cli": "^10.0.0",
    "postcss-discard-comments": "^5.1.2",
    "postcss-preset-env": "^7.8.2",
    "prettier": "^2.8.7",
    "sass": "^1.55.0",
    "stylelint": "^14.13.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "vanilla-js-accordion": "^1.1.3"
  }
}
